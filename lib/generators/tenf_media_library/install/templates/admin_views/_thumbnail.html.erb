<div class='col-sm-3 tenf-image-thumbnail-column' id="image_<%= image.id %>" >
	<% if local_assigns[:input_type] %>
		<%= link_to(image, method: "delete", remote: true, data: { confirm: "Are you sure you want to delete this image?" }, class: 'image-delete') do %>
			Ã—
		<% end %>
		<input type="<%= input_type %>" id="select_image_<%= image.id %>" name="select_image" class="tenf-hidden" data-name="<%= image.name %>" data-id="<%= image.id %>" data-url="<% url_for image.file if image.file.attached? %>">
