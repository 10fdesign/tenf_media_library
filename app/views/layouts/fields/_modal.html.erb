<div id="<%= modal_uid %>" class="image-modal modal fade" tabindex="-1" role="dialog" >
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">
					<div class="row">
						<div class="col-sm-6">
		          <h3 class='h3'>Add <%= input_type == "radio" ? "An Image" : "Images" %></h3>
						</div>
						<div class="col-sm-6 text-right images-search-form-wrapper">
							<%= render partial: "layouts/fields/search", locals: { query: "", input_type: input_type, offset: 4, field_name: field_name || :image_id, modal_uid: modal_uid, parent_selector: parent_selector, selected_image_id: selected_image_id } %>      			
						</div>
					</div>
        </div>
      </div>
      <div class="modal-body">
      	<div class="row modal-directories">
      		
      	</div>
        <div class="row modal-images">
        </div>
        <div class="row">
          <div class="col-sm-12">
          	<%# render partial: "layouts/fields/load_more", locals: { query: "", join_id: join_id, join_table: join_table, join_symbol: join_symbol, input_type: input_type, offset: 4, field_name: field_name || :image_id, modal_uid: modal_uid, parent_selector: parent_selector, selected_image_id: selected_image_id } %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
      	<div class="modal-upload-form">
      		
      	</div>
      	<div class="row modal-buttons">
      		<div class="col-sm-6 upload-container">
      		</div>
      		<div class="col-sm-6 text-right">
		        <a class="btn btn-primary close-image-modal select-image" data-parent-selector="<%= parent_selector %>", data-bs-toggle="modal" data-bs-target="#<%= modal_uid %>">Confirm</a>
		        <a class="btn btn-secondary close-image-modal cancel-image" data-bs-toggle="modal" data-bs-target="#<%= modal_uid %>">Cancel</a>
      		</div>
      	</div>
      </div>
    </div>
  </div>
</div>